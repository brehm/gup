#!/usr/bin/env python
import os, sys
try:
	from gup import cmd
except ImportError:
	# toplevel may not yet have gup on pythonpath, if it's
	# being run from a repo. Add it for ourselves:
	parent = os.path.dirname(os.path.dirname(__file__))
	sys.path.insert(0, parent)

	# ... and for future generations:
	pp = list(filter(None, os.environ.get('PYTHONPATH', '').split(os.path.sep)))
	os.environ['PYTHONPATH'] = os.path.sep.join([parent] + pp)

	from gup import cmd
cmd.main()
